<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fnspl.retail_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Actvities.activity.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Actvities.activity.SignupActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Actvities.activity.ForgetpasswordActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Actvities.activity.DashboardActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Actvities.activity.ProductDetailActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>